{% extends "base.html.twig" %}

{% block body %}

    <div class="container">
        <div>
            <h1>Agendamento de Horário</h1>
        </div>
        <div class="row form-group">
            <div class="col-xs-12">
                <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                    <li class="active"><a href="#step-1">
                            <h4 class="list-group-item-heading">Selecione o Serviço</h4>
                            <p class="list-group-item-text" id="label-servico">First step description</p>
                        </a></li>
                    <li class="disabled"><a href="#step-2">
                            <h4 class="list-group-item-heading">Selecione o Profissional</h4>
                            <p class="list-group-item-text">Second step description</p>
                        </a></li>
                    <li class="disabled"><a href="#step-3">
                            <h4 class="list-group-item-heading">Selecione o Horário</h4>
                            <p class="list-group-item-text">Third step description</p>
                        </a></li>
                    <li class="disabled"><a href="#step-4">
                            <h4 class="list-group-item-heading">Confirme seus Dados</h4>
                            <p class="list-group-item-text">Third step description</p>
                        </a></li>
                </ul>
            </div>
        </div>
        <div class="row setup-content" id="step-1">
            <div class="col-xs-12">
                <div class="col-md-12 well text-center">
                    <h1> Serviços Disponiveis</h1>

                    <select class="form-control" id="sel-servico">
                        <option value="0"> -- Selecione --</option>
                        {% for opcao in servicos %}                        
                            <option value="{{ opcao.id }}">{{ opcao.nome }}</option>                    
                        {% endfor %}
                    </select>

                    <br />
                    <button id="activate-step-2" class="btn btn-primary btn-lg" disabled="true">Próximo Passo</button>
                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-2">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    <h1 class="text-center"> Profissionais</h1>

                    <div id="profissionais">
                    </div>    
                    <button id="activate-step-3" class="btn btn-primary btn-lg" disabled="true">Próximo Passo</button>

                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-3">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    <h1 class="text-center"> Selecione o horário</h1>

                    <select class="form-control" id="sel-dia">

                        <option value="0"> -- Selecione --</option>

                        {% for dia in datas %} 
                            {% if dia|date('N') != 7 %}
                                <option value="{{ dia|date('Y-m-d') }}">{{ dia|date('D - d/m/Y') }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                    <br />
                    <legend>Selecione o Horário</legend>

                    <fieldset id="horarios">



                    </fieldset>

                    <br />

                    <button id="activate-step-4" class="btn btn-primary btn-lg" disabled="true">Próximo Passo</button>

                </div>
            </div>
        </div>
        <div class="row setup-content" id="step-4">
            <div class="col-xs-12">
                <div class="col-md-12 well">
                    <h1 class="text-center"> Confirme</h1>

                    <form action="/agendar" method="post" class="form-horizontal">

                        <input type="hidden" name="servico" value="" id="hid-servico"/>
                        <input type="hidden" name="barbeiro" value="" id="hid-barbeiro"/>
                        <input type="hidden" name="horario" value="" id="hid-horario"/>
                        
                        <div class="form-group">
                            <label for="nome" class="col-sm-2 control-label">Seu nome</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="email" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                            </div>
                        </div>
                        
                        <div class="form-group">                            
                            <label for="telefone" class="col-sm-2 control-label">Telefone</label>
                            
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="telefone" name="telefone" placeholder="(99)99999-9999">
                                </div>                           
                        </div>
                        
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-success">Agendar</button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="/js/agendamento.js" ></script>
{% endblock %}