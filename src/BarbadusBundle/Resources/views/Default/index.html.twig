{% extends "base.html.twig" %}

{% block body %}
    
  <div class="container">
      <div>
          <h1>Agendamento de Horário</h1>
      </div>
	<div class="row form-group">
        <div class="col-xs-12">
            <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                <li class="active"><a href="#step-1">
                    <h4 class="list-group-item-heading">Escolha um Serviço</h4>
                    <p class="list-group-item-text">First step description</p>
                </a></li>
                <li class="disabled"><a href="#step-2">
                    <h4 class="list-group-item-heading">Selecione um Profissional</h4>
                    <p class="list-group-item-text">Second step description</p>
                </a></li>
                <li class="disabled"><a href="#step-3">
                    <h4 class="list-group-item-heading">Selecione o Horário</h4>
                    <p class="list-group-item-text">Third step description</p>
                </a></li>
                <li class="disabled"><a href="#step-4">
                    <h4 class="list-group-item-heading">Confirme Seus Dados</h4>
                    <p class="list-group-item-text">Third step description</p>
                </a></li>
            </ul>
        </div>
	</div>
    <div class="row">
        <div class="col-xs-12">
            <div class="col-md-12 well setup-content text-center" id="step-1">
                <h1> Serviços Disponíveis</h1>
                
                    <select class="form-control">
                        {% for opcao in servicos %}
                            <option value="{{ opcao.id }}">{{ opcao.nome }}</option>                      
                        {% endfor %}
                     
                    </select>
                <br />
                
                <button id="activate-step-2" class="btn btn-primary btn-lg">Avançar</button>
            </div>
        </div>
    </div>
    <div class="row setup-content" id="step-2">
        <div class="col-xs-12">
            <div class="col-md-12 well setup-content" id="profissionais">
                <h1 class="text-center"> Profissionais</h1>
               
                
                
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="col-md-12 well setup-content" id="step-3">
                <h1 class="text-center"> Horários</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="col-md-12 well setup-content" id="step-3">
                <h1 class="text-center"> Confirme</h1>
            </div>
        </div>
    </div>  
</div>
{% endblock %}


{% block javascripts %}
    <script type="text/javascript" src="/js/agendamento.js"></script> 
{% endblock %}